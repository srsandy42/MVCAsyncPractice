@model IEnumerable<ProductDto>
<h1>Product List</h1>
<hr/>
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Product Name</td>
            <td>Description</td>
            <td>Price</td>
            <td>Category</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4">No Record Found!!!</td>
            </tr>
        }

        else
        {
            @foreach (var product in Model)
            {
    <tr>
        <td>@product.Id</td>
        <td>@product.ProductName</td>
        <td>@product.Description</td>
        <td>@product.Price</td>
        <td>@product.Category</td>
        <td>
            <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@product.Id">Edit</a>

        </td>
        <td>
            <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@product.Id">Delete</a>
        </td>
    </tr>
            }
        }

    </tbody>
    </table>