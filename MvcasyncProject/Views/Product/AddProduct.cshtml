@model ProductDto
    <h1>Add Product</h1>
    <hr />
    <form asp-action="AddProduct" asp-controller="Product" method="post">
        <div class="form-group">

            <label asp-for="ProductName"></label>
            <input type="text" asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>


    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="text" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category"></label>
        <input type="text" asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </form>
